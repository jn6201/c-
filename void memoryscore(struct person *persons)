#include<stdio.h>
#include<stdlib.h>
#include<string.h>
struct person{
	char name[20];
	int score;
	char string[32];
};
int num=0;
/*创建文件并输入成绩*/ 
void memoryscore(struct person *persons,int score){
	FILE *fp;
		if(num=0){
	  if((fp=fopen("./file.txt","w"))==NULL){
		printf("\n open file Fail,close!");
		getchar();
		exit(1);
	  }
    }
    else {
	  if((fp=fopen("./file.txt","a"))==NULL){
		printf("\n open file Fail,close!");
		getchar();
		exit(1);
	   }
    }
        persons[num].score=score;
	itoa(persons[num].score,persons[num].string,10);
	scanf("%s",persons[num].name);
	fputs(persons[num].name,fp);
	fputc('\n',fp);
	fputs(persons[num].string,fp);
	fputc('\n',fp);
	fclose(fp);
}
